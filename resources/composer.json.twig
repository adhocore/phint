{
    "name": "{{username}}/{{package}}",
    "description": "{{descr}}",
    "type": "{{type}}",
    "keywords": {{keywords|json_encode|raw}},
    "license": "MIT",
    "authors": [
        {
            "name": "{{name}}",
            "email": "{{email}}"
        }
    ],
    "autoload": {
        "psr-4": {
            "{{namespace|replace({'\\': '\\\\'})}}\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "{{namespace|replace({'\\': '\\\\'})}}\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">={{php}}.0"{% for pkg in req %},
        "{{pkg.name}}": "{{pkg.version}}"{% endfor %}

    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.5" || ^7.5{% for pkg in dev %},
        "{{pkg.name}}": "{{pkg.version}}"{% endfor %}

    },
{% if bin %}
    "bin": [
{% set binc = bin|length - 1 %}
{% for i, bn in bin %}
        "{{bn}}"{{ i < binc ? ',' : '' }}
{% endfor %}
    ],
{% endif %}
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "scripts": {
        "post-root-package-install": [
{%if type == 'project' %}
            "@env"
{% endif %}
        ],
{%if type == 'project' %}
        "@env": "php -r \"is_file('.env') || copy('.env.example', '.env');\"",
{% endif %}
        "test": "phpunit",
        "test:cov": "phpunit --coverage-text --coverage-clover coverage.xml --coverage-html vendor/cov"
    }
}
