cache:
  directories:
    - $HOME/.composer/cache/files

language: php

php:
{% if php <= 5.4 %}
  - 5.4
{% endif %}
{% if php <= 5.5 %}
  - 5.5
{% endif %}
{% if php <= 5.6 %}
  - 5.6
{% endif %}
{% if php <= 7.0 %}
  - 7.0
{% endif %}
{% if php <= 7.1 %}
  - 7.1
{% endif %}
{% if php <= 7.2 %}
  - 7.2
{% endif %}
{% if php <= 7.3 %}
  - 7.3
{% endif %}
  - nightly

matrix:
  allow_failures:
    - php: nightly

install:
  - composer install --prefer-dist

before_script:
  - for P in src tests; do find $P -type f -name '*.php' -exec php -l {} \;; done

script:
  - vendor/bin/phpunit --coverage-text --coverage-clover=coverage.xml

{% if codecov %}
after_success:
  - bash <(curl -s https://codecov.io/bash)
{% endif %}
